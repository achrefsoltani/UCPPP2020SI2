{% extends 'base.html.twig' %}

{% block title %}Liste des Salles {% endblock %}

{% block body %}

    <div class="row">
        {% for salle in salle %}
            <div class="card col-3 mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"> Salle Numéro: {{ salle.numero }}</h5>

                    <a
                            href="{{ path('salle.detail', {id: salle.id}) }}"
                            target="_blank"
                            class="card-link">Détail</a>
                    <a
                            href="{{ path('salle.edit', {id: salle.id}) }}"
                            target="_blank"
                            class="card-link">Modifier</a>
                    <a
                            href="{{ path('salle.delete', {id: salle.id}) }}"
                            target="_blank"
                            class="card-link">Supprimer</a>



                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
